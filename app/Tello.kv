#:kivy 1.4

<KivyCamera>:
    FloatLayout:
        Button:
            text: "Forward"
            pos_hint: {'x': 6, 'y': 1.5}
            size_hint: 1, .5
            on_press: root.on_move_forward()
            on_release: root.off_move_forward()
        Button:
            text: "Backward"
            pos_hint: {'x': 6, 'y': .5}
            size_hint: 1, .5
            on_press: root.on_move_backward()
            on_release: root.off_move_backward()
        Button:
            text: "Right"
            pos_hint: {'x': 6.5, 'y': 1}
            size_hint: 1, .5
            on_press: root.on_move_right()
            on_release: root.off_move_right()
        Button:
    	    text: 'Left'
    	    pos_hint: {'x': 5.5, 'y': 1}
